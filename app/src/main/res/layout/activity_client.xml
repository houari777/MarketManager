<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/supperete"
    tools:context=".Client">

    <EditText
        android:id="@+id/Nom"
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/Prenom"
        android:layout_alignTop="@+id/textView9"
        android:background="@drawable/cercle"
        android:ems="10"
        android:foreground="@android:color/black"
        android:inputType="textPersonName"
        android:lineSpacingExtra="18sp"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="142dp"
        android:background="@drawable/cercle"
        android:lineSpacingExtra="18sp"
        android:text="الاسم"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/cercle"
        android:lineSpacingExtra="18sp"
        android:text="اللقب"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/Prenom"
        android:layout_width="226dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/Tel"
        android:layout_alignTop="@+id/textView10"
        android:background="@drawable/cercle"
        android:ems="10"
        android:foreground="@android:color/black"
        android:inputType="textPersonName"
        android:lineSpacingExtra="18sp"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="52dp"
        android:background="@drawable/cercle"
        android:lineSpacingExtra="18sp"
        android:text="رقم الهاتف"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/Tel"
        android:layout_width="227dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginStart="19dp"
        android:background="@drawable/cercle"
        android:ems="10"
        android:foreground="@android:color/black"
        android:inputType="textPersonName"
        android:lineSpacingExtra="18sp"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/Save"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="93dp"
        android:background="@drawable/cercle"
        android:lineSpacingExtra="18sp"
        android:onClick="click"
        android:text="تسجيل"
        android:textAlignment="center"
        android:textColor="@color/zxing_status_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/list_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>